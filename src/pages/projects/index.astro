---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import Newsletter from '../../components/Newsletter.astro';

const projects = [
    {
        name: "CONFIDENTIAL6G",
        description: "Confidential Computing for 6G. Developing cryptographic protocols and security frameworks for the next generation of wireless networks.",
        image: "/img/c6g.png", // Verify path, might be logos/c6g.png or just c6g.png. user ls says public/img/c6g.png
        link: "/projects/confidential6g",
        logoStyle: "max-height: 80px;" 
    },
    {
        name: "ELASTIC",
        description: "A software architecture for extreme-scale analytics. ELASTIC redefines service orchestration within 6G networks, integrating technologies like WebAssembly and Confidential Computing.",
        image: "/img/logos/elastic.png",
        link: "/projects/elastic",
        logoStyle: "max-height: 60px; background: #323232; border-radius: 5px; padding: 5px;"
    },
    {
        name: "TITAN",
        description: "AI for Privacy. TITAN proposes to develop secure and trustworthy confidential data processing and sharing capabilities.",
        image: "/img/logos/titan.svg",
        link: "/projects/titan",
        logoStyle: "max-height: 60px;"
    }
];

const focusAreas = [
    {
        title: "Confidential Computing",
        description: "We are developing frameworks and tools to enable secure data processing in untrusted environments, leveraging TEEs and advanced cryptography.",
        icon: "fas fa-shield-alt"
    },
    {
        title: "Artificial Intelligence",
        description: "Our research focuses on privacy-preserving AI/ML, enabling collaborative training and inference without compromising data confidentiality.",
        icon: "fas fa-brain"
    },
    {
        title: "Cloud & Edge Computing",
        description: "We are exploring new architectures for secure and efficient computing across the cloud-edge continuum, optimizing for performance and privacy.",
        icon: "fas fa-cloud"
    },
    {
        title: "Secure Data Sharing",
        description: "We are building solutions for secure multi-party computation and data sharing, allowing organizations to collaborate on sensitive data.",
        icon: "fas fa-share-alt"
    }
];

const title = "Ultraviolet Projects - Research & Innovation";
const description = "Explore Ultraviolet's research projects in confidential computing, AI, and 6G. We collaborate with leading organizations to drive innovation.";
---

<Layout title={title} description={description}>
    <Header slot="header" />

    <div class="pt-20">
        <Hero 
            title="Research Projects"
            description="Ultraviolet is actively involved in cutting-edge research projects funded by the European Union. We collaborate with leading academic and industrial partners to push the boundaries of technology."
        />
    </div>

    <!-- Active Projects -->
    <section class="py-16 bg-background transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-text-main font-heading mb-12 text-center">Active Projects</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {projects.map((project) => (
                    <div class="flex flex-col rounded-lg shadow-lg overflow-hidden border border-border hover:shadow-xl transition-shadow duration-300 bg-card">
                        <div class="flex-shrink-0 bg-surface h-48 flex items-center justify-center p-6 border-b border-border">
                            <img class="object-contain" src={project.image} alt={project.name} style={project.logoStyle} />
                        </div>
                        <div class="flex-1 bg-card p-6 flex flex-col justify-between">
                            <div class="flex-1">
                                <a href={project.link} class="block mt-2">
                                    <p class="text-xl font-semibold text-text-main font-heading">{project.name}</p>
                                    <p class="mt-3 text-base text-text-muted">{project.description}</p>
                                </a>
                            </div>
                            <div class="mt-6 flex items-center">
                                <a href={project.link} class="text-base font-semibold text-primary hover:text-primary-dark transition-colors">
                                    Learn more <span aria-hidden="true">&rarr;</span>
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Research Focus Areas -->
    <section class="py-16 bg-surface transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-text-main font-heading mb-12 text-center">Research Focus Areas</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {focusAreas.map((area) => (
                    <div class="bg-card p-6 rounded-lg shadow-sm border border-border">
                        <div class="text-primary mb-4">
                            <i class={`${area.icon} text-3xl`}></i>
                        </div>
                        <h3 class="text-lg font-bold text-text-main mb-2 font-heading">{area.title}</h3>
                        <p class="text-text-muted text-sm">{area.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <Newsletter />

    <Footer slot="footer" />
</Layout>
