---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FeatureSection from '../../components/FeatureSection.astro';
import Hero from '../../components/Hero.astro';
import PricingCard from '../../components/PricingCard.astro';

const title = "Prism AI - Secure Collaborative AI Platform";
const description = "Prism AI facilitates secure, collaborative AI workflows in Trusted Execution Environments (TEEs), enabling privacy-preserving multi-party computation.";
---

<Layout title={title} description={description}>
    <Header slot="header" />

    <div class="pt-20">
        <Hero 
            title="Secure, Collaborative AI for Confidential Workloads"
            description="Empowers organizations to execute AI computations securely within Trusted Execution Environments (TEEs). Designed for privacy-preserving collaboration."
            image="/img/header.avif"
            ctaText="Get Started"
            ctaLink="https://prism.ultraviolet.rs"
        />
    </div>

    <!-- Clients Section -->
    <section class="py-12 bg-surface border-b border-border">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-bold text-center text-text-main mb-8 font-heading">Our Clients and Partners</h2>
            <div class="flex flex-wrap justify-center gap-8 items-center grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-500 dark:invert">
                 <img src="/img/logos/target.png" alt="Target" class="h-12 object-contain">
                 <img src="/img/logos/greennet.png" alt="Greennet" class="h-12 object-contain">
                 <img src="/img/logos/eu.png" alt="EU Commission" class="h-12 object-contain">
                 <img src="/img/logos/telefonica.png" alt="Telefonica" class="h-10 object-contain">
                 <img src="/img/logos/tue.png" alt="TUe" class="h-10 object-contain">
                 <img src="/img/logos/tno.png" alt="TNO" class="h-10 object-contain">
                 <img src="/img/logos/parc.png" alt="Intel/PARC" class="h-10 object-contain">
                 <img src="/img/logos/vtt.png" alt="VTT" class="h-10 object-contain">
                 <img src="/img/logos/etf.png" alt="ETF" class="h-12 object-contain">
                 <img src="/img/logos/lf.png" alt="Linux Foundation" class="h-12 object-contain">
            </div>
        </div>
    </section>

    <FeatureSection title="Introducing Prism AI" image="/img/prism-concept.png" imageSide="left" background="gray">
        <p>
            Cutting-edge platform meticulously engineered to empower organizations and developers in executing confidential workloads within secure enclaves (TEEs).
        </p>
        <p class="mt-4">
            Whether operating in private, hybrid, or public cloud settings, Prism AI excels in provisioning secure encrypted Virtual Machines (VMs). It sets the stage for Secure Multi-party Computation (SMPC), enabling organizations to collaborate securely on AI projects while preserving the privacy of sensitive data.
        </p>
    </FeatureSection>

     <!-- Features Grid -->
    <section class="py-16 bg-background transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl text-text-main sm:text-4xl font-heading">Prism AI Features</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <!-- Add Prism Features here - abbreviating list for brevity, matching previous pattern -->
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                         <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary text-white"><i class="fas fa-cogs text-xl"></i></div>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-lg leading-6 font-medium text-text-main font-heading">Computation Definition and Management</h3>
                        <p class="mt-2 text-base text-text-muted">Simplify the definition and execution of secure workloads within TEEs.</p>
                    </div>
                </div>
                 <div class="flex items-start">
                    <div class="flex-shrink-0">
                         <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary text-white"><i class="fas fa-shield-alt text-xl"></i></div>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-lg leading-6 font-medium text-text-main font-heading">Fine-Grained Access Control</h3>
                        <p class="mt-2 text-base text-text-muted">Control access with ABAC or RBAC. AI algorithms and data are never uploaded to Prism AI - only to attested enclaves.</p>
                    </div>
                </div>
                 <div class="flex items-start">
                    <div class="flex-shrink-0">
                         <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary text-white"><i class="fas fa-server text-xl"></i></div>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-lg leading-6 font-medium text-text-main font-heading">Secure VM Provisioning</h3>
                        <p class="mt-2 text-base text-text-muted">Excels in secure provisioning, management, and monitoring of encrypted VMs.</p>
                    </div>
                </div>
                <!-- ... other features ... -->
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                         <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary text-white"><i class="fas fa-plug text-xl"></i></div>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-lg leading-6 font-medium text-text-main font-heading">Bring Your Own CVM</h3>
                        <p class="mt-2 text-base text-text-muted">Use your own Confidential VMs in addition to Prism-managed CVMs. Leverage Cocos AI for your own infrastructure.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing Section -->
    <section class="py-16 bg-surface transition-colors duration-300" id="pricing">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-extrabold text-text-main sm:text-4xl font-heading">Choose Your Plan</h2>
                <p class="mt-4 text-xl text-text-muted">Flexible pricing plans tailored to your needs</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <PricingCard 
                    title="Trial" 
                    price="Free" 
                    pricePeriod=""
                    features={[
                        "Two infrastructure choices (Ultraviolet managed, User provided)",
                        "Max 10 minutes per lifecycle for managed CVMs",
                        "5 workspace members",
                        "10 computation definitions",
                        "3 concurrent computation runs",
                        "3 CVMs",
                        "Community support"
                    ]}
                    ctaText="Get Started"
                    ctaLink="https://prism.ultraviolet.rs"
                />
                <PricingCard 
                    title="Developer" 
                    price="€ 99" 
                    features={[
                        "Single infrastructure choice (GCP)",
                        "20 workspace members",
                        "20 computation definitions",
                        "20 concurrent computation runs",
                        "20 CVMs",
                        "Community support",
                        "*Infrastructure billed separately"
                    ]}
                    ctaText="Coming Soon"
                    ctaLink="#pricing"
                    comingSoon={true}
                />
                <PricingCard 
                    title="Team" 
                    price="€ 499" 
                    features={[
                        "Two infrastructure choices (GCP, Azure)",
                        "30 workspace members",
                        "30 computation definitions",
                        "30 concurrent computation runs",
                        "30 CVMs",
                        "Standard support",
                        "*Infrastructure billed separately"
                    ]}
                    ctaText="Coming Soon"
                    ctaLink="#pricing"
                    highlight={true}
                    comingSoon={true}
                />
                <PricingCard 
                    title="Business" 
                    price="€ 1499" 
                    features={[
                        "All infrastructure options (GCP, Azure, User Managed)",
                        "40 workspace members",
                        "40 computation definitions",
                        "40 concurrent computation runs",
                        "40 CVMs",
                        "Priority support",
                        "*Infrastructure billed separately"
                    ]}
                    ctaText="Coming Soon"
                    ctaLink="#pricing"
                    comingSoon={true}
                />
            </div>
             <div class="w-full max-w-sm mx-auto mt-8">
                <PricingCard 
                    title="Enterprise" 
                    price="Contact us" 
                    pricePeriod=""
                    features={[
                        "Custom infrastructure allocation",
                        "Unlimited members",
                        "Custom computation definition limits",
                        "Unlimited concurrent computation runs",
                        "Custom CVM allocation",
                        "Dedicated support",
                        "Custom integration options"
                    ]}
                    ctaText="Contact Us"
                    ctaLink="/contact"
                    highlight={true}
                />
            </div>
        </div>
    </section>

    <!-- Architecture Section -->
    <section class="py-16 bg-background transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
             <h2 class="text-3xl font-extrabold text-text-main sm:text-4xl font-heading mb-6">Prism AI Architecture</h2>
             <div class="relative rounded-xl overflow-hidden shadow-2xl mb-12 bg-white p-4 dark:bg-slate-800">
                 <img src="/img/prism-architecture.png" alt="Prism AI Architecture" class="mx-auto w-full md:w-3/4">
             </div>
        </div>
    </section>

    <Footer slot="footer" />
</Layout>
