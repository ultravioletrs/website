<script>
  // Mobile Menu Logic
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  const body = document.body;

  if (btn && menu) {
      btn.addEventListener('click', () => {
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!isExpanded));
      
      if (!isExpanded) {
        menu.classList.remove('translate-x-full');
        body.classList.add('overflow-hidden'); // Prevent background scrolling
      } else {
        menu.classList.add('translate-x-full');
        body.classList.remove('overflow-hidden');
      }
    });
  }

  // Scroll Effect Logic
  const header = document.getElementById('main-header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
       header?.classList.add('shadow-md');
       header?.querySelector('.absolute')?.classList.add('opacity-100');
    } else {
       header?.classList.remove('shadow-md');
       header?.querySelector('.absolute')?.classList.remove('opacity-100');
    }
  });

  // Dark Mode Logic
  const themeToggleMain = document.getElementById('theme-toggle');
  const themeToggleMobile = document.getElementById('theme-toggle-mobile');
  
  const darkIcon = document.getElementById('theme-toggle-dark-icon');
  const lightIcon = document.getElementById('theme-toggle-light-icon');
  const darkIconMobile = document.getElementById('theme-toggle-dark-icon-mobile');
  const lightIconMobile = document.getElementById('theme-toggle-light-icon-mobile');

  function updateIcons() {
    const isDark = document.documentElement.classList.contains('dark');
    if (isDark) {
        lightIcon?.classList.remove('hidden');
        darkIcon?.classList.add('hidden');
        lightIconMobile?.classList.remove('hidden');
        darkIconMobile?.classList.add('hidden');
    } else {
        lightIcon?.classList.add('hidden');
        darkIcon?.classList.remove('hidden');
        lightIconMobile?.classList.add('hidden');
        darkIconMobile?.classList.remove('hidden');
    }
  }

  function toggleTheme() {
      if (document.documentElement.classList.contains('dark')) {
          document.documentElement.classList.remove('dark');
          localStorage.setItem('color-theme', 'light');
      } else {
          document.documentElement.classList.add('dark');
          localStorage.setItem('color-theme', 'dark');
      }
      updateIcons();
  }

  themeToggleMain?.addEventListener('click', toggleTheme);
  themeToggleMobile?.addEventListener('click', toggleTheme);
  
  // Initial icon update
  updateIcons();
</script>
