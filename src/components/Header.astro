---

<header class="fixed top-0 w-full z-50 bg-white/90 backdrop-blur-md shadow-sm transition-all duration-300" id="main-header">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" aria-label="Home">
          <img class="h-8 w-auto" src="/img/logos/UltraViolet_logo-horizontal.svg" alt="Ultraviolet Logo" />
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex space-x-8 items-center">
        <!-- Products Dropdown -->
        <div class="relative group">
          <button class="text-gray-900 hover:text-primary font-medium inline-flex items-center space-x-1 group-hover:text-primary transition-colors">
            <span>PRODUCTS</span>
            <svg class="w-4 h-4 ml-1 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </button>
          <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-left z-50">
            <div class="py-1" role="menu" aria-orientation="vertical">
              <a href="https://prism.ultraviolet.rs" target="_blank" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary" role="menuitem">PRISM AI</a>
              <a href="/cocos" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary" role="menuitem">COCOS AI</a>
              <a href="/cube" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary" role="menuitem">CUBE AI</a>
              <a href="/products" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary font-bold border-t border-gray-100" role="menuitem">All Products</a>
            </div>
          </div>
        </div>

        <!-- Documentation Dropdown -->
        <div class="relative group">
          <button class="text-gray-900 hover:text-primary font-medium inline-flex items-center space-x-1 group-hover:text-primary transition-colors">
            <span>DOCUMENTATION</span>
             <svg class="w-4 h-4 ml-1 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </button>
           <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-left z-50">
            <div class="py-1" role="menu">
              <a href="https://docs.prism.ultraviolet.rs/" target="_blank" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary">PRISM AI</a>
              <a href="https://docs.cocos.ultraviolet.rs/" target="_blank" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary">COCOS AI</a>
              <a href="https://docs.cube.ultraviolet.rs/" target="_blank" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary">CUBE AI</a>
            </div>
          </div>
        </div>

        <!-- Projects Dropdown -->
        <div class="relative group">
          <button class="text-gray-900 hover:text-primary font-medium inline-flex items-center space-x-1 group-hover:text-primary transition-colors">
            <span>PROJECTS</span>
             <svg class="w-4 h-4 ml-1 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </button>
           <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-left z-50">
            <div class="py-1" role="menu">
              <a href="/projects/confidential6g" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary">CONFIDENTIAL6G</a>
              <a href="/projects/elastic" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary">ELASTIC</a>
               <a href="/projects/titan" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary">TITAN</a>
              <a href="/projects" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary font-bold border-t border-gray-100">All Projects</a>
            </div>
          </div>
        </div>

        <a href="/company" class="text-gray-900 hover:text-primary font-medium transition-colors">COMPANY</a>
        <a href="/careers" class="text-gray-900 hover:text-primary font-medium transition-colors">CAREERS</a>
        <a href="/contact" class="text-gray-900 hover:text-primary font-medium transition-colors">CONTACT</a>
        <a href="/blog" class="text-gray-900 hover:text-primary font-medium transition-colors">BLOG</a>

        <!-- Icons -->
        <div class="flex items-center space-x-4 ml-4 border-l pl-4 border-gray-200">
             <a href="https://github.com/ultravioletrs" target="_blank" class="text-gray-500 hover:text-gray-900 transition-colors">
                <span class="sr-only">GitHub</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
             </a>
        </div>
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" type="button" class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <!-- Icon when menu is closed -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- Icon when menu is open -->
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden bg-white border-t border-gray-100" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/products" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">PRODUCTS</a>
      <a href="https://prism.ultraviolet.rs" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-500 hover:text-primary hover:bg-gray-50 ml-4">Prism AI</a>
      <a href="/cocos" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-500 hover:text-primary hover:bg-gray-50 ml-4">Cocos AI</a>
      <a href="/cube" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-500 hover:text-primary hover:bg-gray-50 ml-4">Cube AI</a>

      <div class="border-t border-gray-100 my-2"></div>
      
       <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">DOCUMENTATION</a>
        <a href="https://docs.prism.ultraviolet.rs/" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-500 hover:text-primary hover:bg-gray-50 ml-4">Prism AI Docs</a>
      
      <div class="border-t border-gray-100 my-2"></div>

      <a href="/projects" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">PROJECTS</a>
      
      <div class="border-t border-gray-100 my-2"></div>

      <a href="/company" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">COMPANY</a>
      <a href="/careers" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">CAREERS</a>
      <a href="/contact" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">CONTACT</a>
      <a href="/blog" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50">BLOG</a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
      btn.addEventListener('click', () => {
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!isExpanded));
      menu.classList.toggle('hidden');
      
      // Toggle icons
      const icons = btn.querySelectorAll('svg');
      icons.forEach(icon => icon.classList.toggle('hidden'));
    });
  }
</script>
