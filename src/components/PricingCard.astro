---
interface Props {
  title: string;
  price: string;
  pricePeriod?: string;
  features: string[];
  ctaText: string;
  ctaLink: string;
  highlight?: boolean;
  comingSoon?: boolean;
}

const { title, price, pricePeriod = "/month", features, ctaText, ctaLink, highlight = false, comingSoon = false } = Astro.props;

const borderClass = highlight ? 'border-primary ring-2 ring-primary' : 'border-gray-200';
const btnClass = comingSoon 
  ? 'bg-gray-100 text-gray-400 cursor-not-allowed'
  : (highlight ? 'bg-primary text-white hover:bg-primary-dark' : 'bg-primary text-white hover:bg-primary-dark'); // Use primary for all capable buttons for now
---

<div class={`flex flex-col p-6 bg-white rounded-lg shadow-md border ${borderClass} h-full transition-transform hover:-translate-y-1`}>
  <h3 class="text-xl font-medium text-gray-900 text-center uppercase tracking-wide mb-4">{title}</h3>
  <div class="flex justify-center items-baseline my-8">
    <span class="text-4xl font-bold text-primary">{price}</span>
    {price !== 'Free' && price !== 'Contact us' && <span class="text-gray-500 font-medium">{pricePeriod}</span>}
  </div>
  <ul class="space-y-4 mb-8 flex-1">
    {features.map((feature) => (
      <li class="flex items-start text-gray-600 text-sm">
        <svg class="h-5 w-5 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span>{feature}</span>
      </li>
    ))}
  </ul>
  <div class="mt-auto">
    <a href={ctaLink} class={`w-full block text-center py-3 rounded-md font-medium transition-colors ${btnClass}`}>
      {comingSoon ? 'Coming Soon' : ctaText}
    </a>
  </div>
</div>
